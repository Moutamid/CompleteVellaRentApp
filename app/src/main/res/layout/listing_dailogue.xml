<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#5B5A5A"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:gravity="center"
            android:text="Want to listing your property"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lexend_light"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="As a customer, you have logged in. Now, if you want to list your property, please log out using your current credentials. The admin has provided separate credentials for listing properties. Clicking 'OK' will log you out as a customer and log in as an admin, taking you to the owner's section"
            android:textColor="#fff"
            android:textSize="14dp" />

        <Button
            android:id="@+id/listing"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/poppins_regular"
            android:text="Ok"

            android:textColor="@color/white" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/poppins_regular"
            android:text="Cancel"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:textColor="#000" />

    </LinearLayout>

</androidx.cardview.widget.CardView>